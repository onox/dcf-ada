with "config/dcf_config";

project Dcf is

   for Library_Name use "dcf";
   for Library_Version use Project'Library_Name & ".so." & Dcf_Config.Crate_Version;

   for Source_Dirs use ("src");
   for Object_Dir use "build/obj/" & Dcf_Config.Build_Profile;
   for Object_Dir use "build/obj";
   for Create_Missing_Dirs use "True";
   for Library_Dir use "build/lib";

   type Library_Type_Type is ("relocatable", "static", "static-pic");
   Library_Type : Library_Type_Type :=
     external ("DCF_LIBRARY_TYPE", external ("LIBRARY_TYPE", "static"));
   for Library_Kind use Library_Type;

   package Compiler is
      for Default_Switches ("Ada") use Dcf_Config.Ada_Compiler_Switches & ("-gnatyM99");
      for Local_Configuration_Pragmas use "gnat.adc";
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Linker is
      for Linker_Options use ("-Wl,-gc-sections");
   end Linker;

end Dcf;
